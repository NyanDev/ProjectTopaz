<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemDayForecastExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:paddingStart="12dp"
            android:text="Day"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/itemTemperatureForecastExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:text="--Â°"
            android:textSize="15sp"
            android:paddingEnd="12dp"/>

        <TextView
            android:id="@+id/itemIconForecastExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O"
            android:layout_toStartOf="@id/itemTemperatureForecastExpand"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/itemDescriptionForecastExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description of the weather"
            android:layout_toStartOf="@id/itemIconForecastExpand"
            android:paddingEnd="16dp"/>


    </RelativeLayout>
</LinearLayout>