<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#adb7ba"
        android:padding="12dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemDayForecastExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:paddingLeft="12dp"
            android:text="Day"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/itemTemperatureForecastExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:text="--Â°"
            android:textSize="15sp"
            android:paddingRight="12dp"/>

        <TextView
            android:id="@+id/itemIconForecastExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O"
            android:layout_toLeftOf="@id/itemTemperatureForecastExpand"
            android:paddingRight="16dp"/>

        <TextView
            android:id="@+id/itemDescriptionForecastExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description of the weather"
            android:layout_toLeftOf="@id/itemIconForecastExpand"
            android:paddingRight="16dp"/>


    </RelativeLayout>
</LinearLayout>